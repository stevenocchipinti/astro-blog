---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";

export interface Props {
  src: string
  alt?: string
  spanRows?: number
  spanCols?: number
  square?: boolean
}

const { src, alt, spanRows = 1, spanCols = 1, square = false } = Astro.props;
const spanArea = `span ${spanRows} / span ${spanCols}`
const aspectRatio = square ? "1" : "initial"
---

<style define:vars={{ spanArea, aspectRatio }}>
  .photo-grid-photo {
    width: 100%;
    height: 100%;
    margin: 0;
    border-radius: 0.5rem;
    object-fit: cover;
    grid-area: var(--spanArea);
    aspect-ratio: var(--aspectRatio);
  }
</style>

<img class="photo-grid-photo" src={src} alt={alt} />
