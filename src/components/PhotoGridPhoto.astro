---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";

export interface Props {
  src: string
  alt?: string
  rowSpan?: number
  colSpan?: number
  aspectRatio?: number
}

const { src, alt, rowSpan = 1, colSpan = 1, aspectRatio = 0 } = Astro.props;
const spanArea = `span ${rowSpan} / span ${colSpan}`
---

<style define:vars={{ spanArea, aspectRatio }}>
  .photo-grid-photo {
    width: 100%;
    height: 100%;
    margin: 0;
    border-radius: 0.5rem;
    object-fit: cover;
    grid-area: var(--spanArea);
    aspect-ratio: var(--aspectRatio);
  }
</style>

<img class="photo-grid-photo" src={src} alt={alt} />
